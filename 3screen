#!/bin/sh

xrandr --nograb --newmode "2560x1440_40.00"  201.00  2560 2720 2984 3408  1440 1443 1448 1476 +hsync +vsync
xrandr --nograb --addmode HDMI-3 2560x1440_40.00
#xrandr --output HDMI-3 --mode 2560x1440_40.00 --verbose
## xrandr --nograb --output HDMI-3 --mode 2560x1440_40.00 --verbose
#xrandr --output HDMI-2 --pos 0x360
#xrandr --output HDMI-3 --pos 1920x0

xrandr --output eDP-1 --mode 1920x1080 --pos 4480x360 --output HDMI-2 --mode 1920x1080 --pos 0x360 --output HDMI-3 --mode 2560x1440_40.00 --pos 1920x0 --primary

# xfce4-display-settings
